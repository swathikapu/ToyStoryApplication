@model IEnumerable<ToyStoryApplication.Models.Franchise>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="franchiseTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstAppearance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th></th>
            <th>Likes</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr id="@item.Id">
            @Html.Action("_Indexpartial", new { id = item.Id})
        </tr>
    }

</table>
<script>
    $(document).ready( function () {
        $('#franchiseTable').DataTable();
    } );
</script>