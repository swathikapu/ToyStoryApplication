@model IEnumerable<ToyStoryApplication.Models.Franchise>

@{
    ViewBag.Title = "Index";
}
<br />
<p>
    @Html.ActionLink("Create New Franchise", "Create",new { } ,new { @class = "btn btn-primary btn-sm createButton"})
</p>
<table class="table table-hover table-striped" id="franchiseTable">
    <thead style="background-color:#a5c05b;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstAppearance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr id="@item.Id">
            @Html.Action("_Indexpartial", new { id = item.Id })
        </tr>
    }
</table>
<script>
    $(document).ready(function () {
        $('#franchiseTable').DataTable();
    });
</script>
