@model ToyStoryApplication.Models.Franchise

<td>
    <img src="@Url.Content(Model.Logo)" width="70" height="70" />
</td>
<td>
    @Html.DisplayFor(modelItem => Model.Name)
</td>
<td>
    @Html.DisplayFor(modelItem => Model.Origin)
</td>
<td>
    @Html.DisplayFor(modelItem => Model.Type)
</td>
<td>
    @Html.DisplayFor(modelItem => Model.FirstAppearance)
</td>
<td>
    @Html.DisplayFor(modelItem => Model.CreatedBy)
</td>
<td data-sort="@Model.Count">
    @using (Ajax.BeginForm(
        actionName:"Like",
        controllerName: "Franchises",
        routeValues: new {id = Model.Id},
        ajaxOptions: new AjaxOptions
        {
            UpdateTargetId = Model.Id.ToString(),
            InsertionMode = InsertionMode.Replace
        }
     ))
    {
        <input type="submit" value=@Model.Count.ToString() id="likeButton" class="fa fa-input fa-2x btn btn-outline-warning"/>
    }
</td>

<td>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-warning editButton", style = "background-color:#6D6237" })
    @Html.ActionLink("Details", "Details", new { id = Model.Id }, new { @class = "btn btn-outline-warning detailsButton", style = "background-color:#128277" })
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-outline-warning deleteButton", style = "background-color:#C2A878" })
</td>